<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HomeActivity"
        android:background="@color/colorPrimary">

    <ImageView
            android:layout_width="304dp"
            android:layout_height="80dp" app:srcCompat="@drawable/logomh"
            android:id="@+id/imageView" tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/video_view" app:layout_constraintHorizontal_bias="0.49"/>

    <Button
            android:text="Get Started"
            android:layout_width="141dp"
            android:layout_height="44dp"
            android:id="@+id/button"
            android:backgroundTint="@color/enter"
            android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.492"
            android:layout_marginTop="41dp" app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_begin="2dp"/>
    <TextView
            android:text="In this app, you will be able to upload images of your own makeup looks you created. You will also be able to provide descriptions of each look and state what products you used to create the looks. Please click below to get started !"
            android:layout_width="276dp"
            android:layout_height="102dp"
            android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/play_button"
            android:textColorHighlight="@color/colornew" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintBottom_toTopOf="@+id/button"/>


    <VideoView
            android:id="@+id/video_view"
            android:layout_width="326dp"
            android:layout_height="204dp" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.492"
            android:layout_marginTop="24dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/play_button"/>
    <Button
            android:id="@+id/play_button"
            android:text="Play Video"
            android:layout_width="138dp"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@+id/video_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:backgroundTint="@color/enter"
            app:layout_constraintHorizontal_bias="0.56"/>


</android.support.constraint.ConstraintLayout>